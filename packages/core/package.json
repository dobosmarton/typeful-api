{
  "name": "@typefulapi/core",
  "version": "0.1.0",
  "description": "Framework-agnostic core for typesafe OpenAPI-first APIs",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "zod": ">=4.0.0"
  },
  "keywords": [
    "openapi",
    "typescript",
    "zod",
    "api",
    "typesafe",
    "rest"
  ],
  "author": "Marton Dobos",
  "license": "MIT",
  "homepage": "https://github.com/dobosmarton/typefulapi#readme",
  "bugs": {
    "url": "https://github.com/dobosmarton/typefulapi/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dobosmarton/typefulapi.git",
    "directory": "packages/core"
  }
}
